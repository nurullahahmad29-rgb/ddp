import math

def luas_kubus(sisi):
    return 6 * sisi * sisi

def luas_balok(panjang, lebar, tinggi):
    return 2 * (panjang * lebar + panjang * tinggi + lebar * tinggi)

def luas_bola(jari_jari):
    return 4 * math.pi * jari_jari * jari_jari

def luas_tabung(jari_jari, tinggi):
    return 2 * math.pi * jari_jari * (jari_jari + tinggi)

def luas_kerucut(jari_jari, selimut):
    return math.pi * jari_jari * (jari_jari + selimut)

print("\n====Luas Bangun Ruang====")
print(f"Luas Kubus: {bangun_ruang.luas_kubus(4)}")
print(f"Luas Balok: {bangun_ruang.luas_balok(4, 5, 6)}")
print(f"Luas Bola: {bangun_ruang.luas_bola(7)}")
print(f"Luas Tabung: {bangun_ruang.luas_tabung(7, 10)}")
print(f"Luas Kerucut: {bangun_ruang.luas_kerucut(7, 10)}")
